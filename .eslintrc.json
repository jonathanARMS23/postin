{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "import/extensions": [
            "error",
            "never",
            {
                "js": "never",
                "ts": "never",
                "jpg": "never"
            }
        ],
        "no-console": "off",
        "no-use-before-define":"off",
        "no-await-in-loop":"off",
        "guard-for-in":"off",
        "max-len": [
            "off",
            {
                "code": 120
            }
        ],
        "no-return-await": "off",
        "func-names": "off",
        "import/no-import-module-exports": "off",
        "import/no-relative-packages": "off",
        "class-methods-use-this": "off",
        "import/no-unresolved": "off",
        "camelcase": "off",
        "no-nested-ternary": "off",
        "new-cap": "off"
    }
}
